@{
    ViewBag.Title = ViewBag.UpdatedTitleCase + " Updated";
    ViewBag.Subtitle = "Change is good.";
}

<div class="row mt25">
    <div class="col-sm-6 col-sm-offset-3">
        <h2>@ViewBag.Title</h2>
        <p><small>@ViewBag.Subtitle</small></p>

        <p>
            Successfully updated your @ViewBag.UpdatedLowerCase. You can return to your account details now.
        </p>
        <a asp-controller="Account" asp-action="Index" class="btn btn-primary"><i class="fa fa-user"></i> Account</a>
    </div>
</div>
